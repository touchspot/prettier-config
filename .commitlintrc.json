{
	"$schema": "https://json.schemastore.org/commitlintrc.json",
	"extends": [
		"@commitlint/config-conventional",
		"@commitlint/config-pnpm-scopes"
	],
	"rules": {
		"subject-case": [2, "never", ["start-case", "pascal-case", "upper-case"]]
	},
	"prompt": {
		"settings": {
			"enableMultipleScopes": true
		}
	}
}
