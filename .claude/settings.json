{
	"$schema": "https://json.schemastore.org/claude-code-settings.json",
	"enableAllProjectMcpServers": true,
	"includeCoAuthoredBy": false,
	"statusLine": {
		"type": "command",
		"command": "ccusage statusline"
	},
	"permissions": {
		"allow": [
			"Bash(git diff:*)",
			"Bash(git log:*)",
			"Bash(git status:*)",
			"Bash(git commit:*)",
			"Bash(pnpm exec:*)"
		],
		"deny": ["Bash(npx:*)"]
	}
}
